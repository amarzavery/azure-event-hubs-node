{
  "compilerOptions": {
    "module": "commonjs",
    "preserveConstEnums": true,
    "sourceMap": true,
    "newLine": "LF",
    "target": "es2017",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "outDir": "dist",
    "allowJs": false,
    "noUnusedLocals":true,
    "strict": false,
    "strictPropertyInitialization": true,
    "declaration": true,
    "declarationDir": "./typings",
    "downlevelIteration": true,
    "lib": [
      "es2015",
      "dom",
      "dom.iterable",
      "es5",
      "es6",
      "es7",
      "esnext",
      "esnext.asynciterable",
      "es2015.iterable"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules/",
    "testhub",
    "typings/**"
  ],
  "include": [
    "./lib/**/*.ts",
    "./examples"
  ]
}